[
    {
        "description": "Sticky Alt to Cmd Variable",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "left_alt",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "left_alt pressed",
                            "value": 1
                        }
                    },
                    {
                        "key_code": "left_command"
                    }
                ],
                "to_delayed_action": {
                    "to_if_invoked": [
                        {
                            "set_variable": {
                                "name": "left_alt pressed",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_canceled": [
                        {
                            "set_variable": {
                                "name": "left_alt pressed",
                                "value": 0
                            }
                        }
                    ]
                }
            }
        ]
    },
    {
        "description": "RControl-Shift-Tab :: Command-Shift-Tab",
        "comment": "Switch between App Backward",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "tab",
                    "modifiers": {
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [
                    {
                        "key_code": "tab",
                        "modifiers": [
                            "command",
                            "shift"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "flag_appswitching",
                        "value": 1
                    }
                ]
            }
        ]
    },
    {
        "description": "RControl-Tab :: Command-Tab",
        "comment": "Switch between App",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "tab"
                },
                "to": [
                    {
                        "key_code": "tab",
                        "modifiers": [
                            "command"
                        ]
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "flag_rcontrol",
                        "value": 1
                    }
                ]
            }
        ]
    },
    {
        "description": "FLAG :: rcontrol",
        "comment": "for Switch between App",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "right_control"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "flag_rcontrol",
                            "value": 1
                        }
                    }
                ],
                "to_after_key_up": [
                    {
                        "set_variable": {
                            "name": "flag_rcontrol",
                            "value": 0
                        }
                    }
                ]
            }
        ]
    },
    {
        "description": "FLAG :: appswitching",
        "comment": "for Switch between App Backward",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "left_shift"
                },
                "to": [
                    {
                        "set_variable": {
                            "name": "flag_appswitching",
                            "value": 1
                        }
                    }
                ],
                "to_after_key_up": [
                    {
                        "set_variable": {
                            "name": "flag_appswitching",
                            "value": 0
                        }
                    }
                ],
                "conditions": [
                    {
                        "type": "variable_if",
                        "name": "flag_rcontrol",
                        "value": 1
                    }
                ]
            }
        ]
    },
